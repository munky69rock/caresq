<%= content_for :javascript do %>
  <%= javascript_pack_tag 'post_tags', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= content_for :css do %>
  <%= stylesheet_pack_tag 'styles/post_tags', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="container">
  <%= title '質問を投稿する' %>

  <% unless current_user.confirmed? %>
    <div class="alert alert-warning" role="alert">
      メールアドレスの確認をすると投稿できるようになります<br/>
      <small>メールが届かない場合は<%= link_to 'コチラ', new_confirmation_path(current_user) %></small>
    </div>
  <% end %>

  <%= render partial: 'includes/post_form', locals: { post: @post } %>
</div>
