<div class="container">
  <%= form_for @user, url: image_path, html: { multipart: true } do |f| %>
    <%= image_tag(@user.image_url, style: 'height: 100px;') if @user.image? %>

    <div class="form-group">
      <%= f.label :image %><br/>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>

    <%= f.submit '更新する', class: 'btn btn-primary' %>
  <% end %>
</div>
