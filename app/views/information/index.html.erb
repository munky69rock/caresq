<div class="container">
  <div class="row">
    <div class="<%= flex_spacing %>">
      <%= title 'お知らせ' %>
      <div class="list-group my-3">
        <% @information.each do |information| %>
          <%= link_to information.title, information_path(information), class: 'list-group-item list-group-item-action' %>
        <% end %>
      </div>
      <%= paginate @information %>
    </div>
  </div>
</div>
